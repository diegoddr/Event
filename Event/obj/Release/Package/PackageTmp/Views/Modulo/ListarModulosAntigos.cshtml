@model Event.ViewModels.DadosModulo
@{
    ViewBag.Title = "Modulos Antigos";
    var usuario = Model.Usuario;
}

<h2>Listar Módulos Antigos</h2>

<div id="tablePc" class="container transparencia" style="display: none">
    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Data</th>
            <th>Descricao</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Vagas</th>
            <th>Evento</th>
            @*<th>Convidar Usuario</th>
                <th>Modificar Modulo</th>
                <th>Inativar Modulo</th>*@
        </tr>
        @foreach (var i in Model.Modulos)
        {
            <tr>
                <td>@i.Nome</td>
                <td>@i.Data.ToShortDateString()</td>
                <td>@i.Descricao</td>
                <td>@i.Inicio</td>
                <td>@i.Fim</td>
                <td>@i.Vagas</td>
                <td>@i.Evento.Nome</td>
                @*if (i.Evento.Organizador == usuario)
                    {
                        <td><button onclick=" location.href='/Modulo/ConvidarUsuario/@i.Id' ">Convidar</button></td>
                        <td><button onclick=" location.href='/Modulo/AlterarModulo/@i.Id' ">Alterar</button></td>
                    }
                    else
                    {
                        <td></td>
                        <td></td>
                    }
                    <td>X</td>*@
            </tr>
        }
    </table>
</div>

<div id="tableCel" style="display: none">
    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Data</th>
            <th>Horário</th>
            <th>Fim</th>
        </tr>
        @foreach (var i in Model.Modulos)
        {
            <tr>
                <td>@i.Nome</td>
                <td>@i.Data.ToShortDateString()</td>
                <td>@i.Inicio</td>
                <td>@i.Fim</td>
            </tr>
        }
    </table>
</div>

@section scripts
{
    <script>
        jQuery(document).ready(function ($) {
            var deviceAgent = navigator.userAgent.toLowerCase();
            var agentID = deviceAgent.match(/(iphone|ipod|ipad|android)/);

            if (agentID) {
                document.getElementById('tableCel').style.display = "block";

            } else {
                document.getElementById('tablePc').style.display = "block";
            }
        });
    </script>
}