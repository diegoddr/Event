@{
    ViewBag.Title = "CadastrarUsuario";
}

<div class="col-md-3"></div>
<div class="container-fluid col-md-5">
    <form class="form-horizontal" method="post">
        <fieldset>
            <legend>Cadastrar Usuarios</legend>
            <div>
                <label class="control-label">* Nome</label>
                <div>
                    <input class="textos" id="tnome" name="Nome" type="text" placeholder="Nome">
                </div>
            </div>
            <div>
                <label class="control-label">* Login</label>
                <div>
                    <input class="textos" id="tlogin" name="Login" type="text" placeholder="Usuario">
                </div>
            </div>
            <div>
                <label class="control-label">* Senha</label>
                <div>
                    <input class="textos" id="tsenha" name="Senha" type="password" placeholder="Letras e numeros">
                </div>
            </div>
            <div>
                <label class="control-label">* Repita a Senha</label>
                <div>
                    <input class="textos" id="tsenha2" name="Senha" type="password" placeholder="Letras e numeros">
                </div>
            </div>
            <div>
                <label class="control-label">* Email</label>
                <div>
                    <input class="textos" id="temail" name="Email" type="email" placeholder="exemplo@exemplo.com">
                </div>
            </div>
            <br />
            <div>
                <label class="control-label">Sexo</label>
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-default">
                        <input type="radio" name="Masculino" id="rmasculino"> Masculino
                    </label>
                    <label class="btn btn-default">
                        <input type="radio" name="Feminino" id="rfeminino"> Feminino
                    </label>
                </div>
            </div>
            <div>
                <label class="control-label">* Telefone</label>
                <div>
                    <input id="ttelefone" name="Telefone" type="text" class="telefone" placeholder="(99)9 9999-9999">
                </div>
            </div>
            <div>
                <label class="control-label">* Nascimento</label>
                <div>
                    <input id="tnascimento" name="Nascimento" type="text" class="data" placeholder="01/01/2014">
                </div>
            </div>
            <br />
            <div>
                <div class="btn-group">
                    <button class="btn btn-success" type="submit" id="enviar">Enviar</button>
                    <button class="btn btn-danger" type="reset" id="limpar">Limpar</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

@section scripts{
    <script>
        var masks = ['(00) 00000-0000', '(00) 0000-00009'],
        maskBehavior = function (val, e, field, options) {
            return val.length > 14 ? masks[0] : masks[1];
        };

        $('.telefone').mask(maskBehavior, {
            onKeyPress:
               function (val, e, field, options) {
                   field.mask(maskBehavior(val, e, field, options), options);
               }
        });
        $('.data').mask('00/00/0000');

        function validarSenha() {
            senha1 = document.f1.tsenha.value
            senha2 = document.f1.tsenha2.value
            if (senha1 != senha2)
                alert("As senhas não conferem")
            else{}
        }
    </script>
}




