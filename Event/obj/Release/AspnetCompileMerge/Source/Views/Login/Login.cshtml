@model Event.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="../../assets/ico/favicon.ico">

    <title>Signin Template for Bootstrap</title>

    <link href="~/Resourses/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Resourses/css/signin.css" rel="stylesheet" />

</head>

<body>
    <div class="container">
        <form class="form-signin" role="form" method="POST">
            <h2 class="form-signin-heading">Acesso Evento</h2>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Usuario", @autofocus = "true", @id = "login", @required = "true", @title = "Somente caracteres" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", @placeholder = "Senha", @id = "password", @required = "true", @title = "Somente bolinhas" })
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Lembre-me
            </label>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
        </form>
    </div>
    <div class="container form-signin">
        Caso você ainda não seja usuario<br />
        Clique abaixo e faça cadastre-se<br />
        Levará só um minutinho!
        <a href="/Usuario/CadastrarUsuario">Cadastre-se</a>
    </div>
</body>
</html>

