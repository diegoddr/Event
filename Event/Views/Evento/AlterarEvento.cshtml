@{
    ViewBag.Title = "AlterarEvento";
}

<div class="col-md-3"></div>
<div class="container col-md-5">
    <form class="form-horizontal" method="post">
        <fieldset>
            <legend>Cadastrar Evento</legend>
            <div>
                <label class="control-label">* Nome</label>
                <div>
                    <input class="textos" value="@Model.Nome" id="tnome" name="Nome" type="text" placeholder="Nome" required="required">
                </div>
            </div>
            <div>
                <label class="control-label">Descrição</label>
                <div>
                    <textarea class="textos" id="tdescricao" name="Descricao" placeholder="Digite a descrição">@Model.Descricao</textarea>
                </div>
            </div>

            <div>
                <label class="control-label">* Inicio</label>
                <div>
                    <input onchange="validarDataMenor()" value="@Model.Inicio.ToShortDateString()" id="tDataInicio" name="Inicio" type="text" placeholder="00/00/0000" class="data calendario" required="required">
                    <span style="color:red;" id="erroDataInicio"></span>
                </div>
            </div>

            <div>
                <label class="control-label">* Fim</label>
                <div>
                    <input onchange="validarDiferencaData()" value="@Model.Fim.ToShortDateString()" id="tfim" name="Fim" type="text" placeholder="00/00/0000" class="data calendario" required="required">
                    <span style="color:red;" id="erroDataFim"></span>
                </div>
            </div>
            <br />
            <div>
                <div class="btn-group">
                    <button onclick="validarCampos()" class="btn btn-success" type="submit" id="enviar">Enviar</button>
                    <button class="btn btn-danger" type="reset" id="limpar">Limpar</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

@section scripts{
    <script>
        $("button[type=submit]").click(function (e) {
            var eDataInicio = document.getElementById("erroDataInicio").innerHTML;
            var eDataFim = document.getElementById("erroDataFim").innerHTML;
            if (eDataFim != "" || eDataInicio != "") {
                alert("Preencha corretamente os champos em vermelho");
                e.preventDefault();
            }
        });
    </script>
}



