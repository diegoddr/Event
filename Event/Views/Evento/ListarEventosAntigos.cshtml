@{
    ViewBag.Title = "ListarEventosAntigos";
}
<div id="tablePc" class="container transparencia" style="display: none">
    <h3 align="center">Lista de Eventos Antigos</h3>
    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Organizador</th>
            @*<th>Criar Modulo</th>*@
            @*<th>Modificar Evento</th>*@
            @*<th>Cancelar Evento</th>*@
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Nome</td>
                <td>Descricao</td>
                <td>@i.Inicio.ToShortDateString()</td>
                <td>@i.Fim.ToShortDateString()</td>
                <td>@i.Organizador.Nome</td>
                @*<td><button onclick="location.href='../Modulo/CadastrarModulo/@i.Id'">Novo</button></td>
                    <td><button onclick="location.href='../Evento/AlterarEvento/@i.Id'">Alterar</button></td>
                    <td><button onclick="location.href='../Evento/InativarEvento/@i.Id'">Inativar</button></td>*@
            </tr>
        }
    </table>
</div>
<div id="tableCel" style="display: none">
    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Início</th>
            <th>Fim</th>

        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Nome</td>
                <td>@i.Inicio.ToShortDateString()</td>
                <td>@i.Fim.ToShortDateString()</td>
            </tr>
        }
    </table>
</div>
@section scripts
{
    <script>
        jQuery(document).ready(function ($) {
            var deviceAgent = navigator.userAgent.toLowerCase();
            var agentID = deviceAgent.match(/(iphone|ipod|ipad|android)/);

            if (agentID) {
                document.getElementById('tableCel').style.display = "block";

            } else {
                document.getElementById('tablePc').style.display = "block";
            }
        });
    </script>
}
